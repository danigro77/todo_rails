<h2><%= @list.name %></h2>
<% @item.errors.full_messages.each do |msg| %>
  <p><%= msg %></p>
<% end %>

<ol>
  <% @items.each do |item| %>
    <li><%= item.name %></li>
  <% end %>
</ol>
<%= form_for [@item.list, @item] do |f| %>
<%= f.text_field :name %>
<%= f.submit "New Item" %>
<% end %>
